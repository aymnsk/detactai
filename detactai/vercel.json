{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb",
        "includeFiles": ["app/models/yolov8n.pt"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/app/main.py" },
    { "src": "/temp/(.*)", "dest": "backend/app/main.py" },
    { "src": "/(.*)", "dest": "frontend/src/index.html" }
  ]
}
